#include <stdio.h>
int main()
{
           int num;
           printf("Enter the number:");
           scanf("%d",&num);
           for(int i=0;i<num;i++)
           {
                      for(int j=num-1-i;j>0;j--)
                                 printf(" ");
                      for(int k=i+1;k>0;k--)
                                 printf("%d ",k);
                      for(int m=2;m<=i+1;m++)
                                 printf("%d ",m);
                      printf("\n");
           }
           return 0;
}
